<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <env name="ROSCONSOLE_FORMAT" value="[${severity}] [${node}] ${message}"/>

  <arg name="debug_msg_enabled" default="false"/> 
  <arg name="position_scale" default="0.8"/>
  <arg name="orientation_scale" default="0.8"/>
  <include file="$(find marslite_control)/launch/test_joystick_teleoperation.launch">
    <arg name="debug_msg_enabled" value="$(arg debug_msg_enabled)"/>
    <arg name="position_scale" value="$(arg position_scale)"/>
    <arg name="orientation_scale" value="$(arg orientation_scale)"/>
  </include>

  <arg name="use_shared_controller" default="false"/>
  <node name="test_shared_control" pkg="marslite_control" type="test_shared_control" output="screen">
    <param name="use_shared_controller" value="$(arg use_shared_controller)"/>
  </node>
</launch>